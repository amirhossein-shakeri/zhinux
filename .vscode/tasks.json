{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Buf: Lint",
      "type": "shell",
      "command": "buf lint",
      "problemMatcher": {
        "owner": "proto",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}
